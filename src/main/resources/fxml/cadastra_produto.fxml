<?import javafx.scene.control.Button;
import javafx.scene.control.Dialog;
import javafx.scene.control.Label;
import javafx.scene.control.TextArea;
import javafx.scene.control.TextField;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox; ?>

<Dialog xmlns:fx="http://javafx.com/fxml" fx:controller="com.productprices.controller.CadastraProdutoController">
    <VBox spacing="10" alignment="CENTER" padding="20">
        <Label text="Cadastrar Produto" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="nomeProdutoField" promptText="Nome do Produto" />
        <TextField fx:id="precoProdutoField" promptText="Preço do Produto" />
        <TextArea fx:id="comentarioField" promptText="Comentário (opcional)" prefRowCount="4" />
        <HBox spacing="10" alignment="CENTER">
            <Button text="Salvar" onAction="#handleSalvar" />
            <Button text="Cancelar" onAction="#handleCancelar" />
        </HBox>
    </VBox>
</Dialog>